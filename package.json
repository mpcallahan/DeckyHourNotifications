  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpcallahan/DeckyHourNotifications.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "steam-deck",
    "hour",
    "notifications"
  ],
